package scripts.closet{	import flash.display.*;	import flash.events.*;	import flash.display.MovieClip;	import flash.display.Stage;	//	public class closetBtn extends MovieClip {		private var pBtnNme:String = "";		private var pToggle:int = -1;		//		public function closetBtn ():void {			addEventListener (MouseEvent.MOUSE_DOWN,mousedown);			addEventListener (MouseEvent.ROLL_OVER,rollover);			this.addEventListener (MouseEvent.ROLL_OUT,rollout);			pBtnNme = this.name;			stop ();		}		private function rollover (evt:MouseEvent):void {			this.gotoAndStop (2);		}		private function rollout (evt:MouseEvent):void {			this.gotoAndStop (1);		}		//		private function mousedown (evt:MouseEvent):void {			//trace (this);			if (root) {				//normal root buttons				switch (pBtnNme) {					case "playGameBtn":						//root.pRoot.loadMap();						//root.pRoot.loadDormRoom();						root.pRoot.loadSideScrollScene("dorm", 100 + Math.random() * 100, 410);						this.visible = false;						break;					case "guestloginBtn":						root.pRoot.guestLogin();						this.visible = false;						break;					case "scrollBtnRight":						root.pRoot.gCurrScreen.scrollIconsRight ();						break;					case "scrollBtnLeft":						root.pRoot.gCurrScreen.scrollIconsLeft ();						break;				}			}		}		//	}}