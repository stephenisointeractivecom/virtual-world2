package scripts.modPanel{	import flash.display.*;	import flash.events.*;	import flash.display.MovieClip;	import flash.display.Stage;	//	public class modPanelSlider extends MovieClip {		private var pBtnNme:String = "";		private var pSliding:Boolean = false;		//		public function modPanelSlider():void {			addEventListener(Event.ENTER_FRAME,enterframe);			this.addEventListener(MouseEvent.MOUSE_DOWN,mousedown);			this.addEventListener(MouseEvent.MOUSE_UP,mouseup);			this.addEventListener(MouseEvent.ROLL_OUT,mouseup);			pBtnNme = this.name;			stop();		}		//		public function setSliderNum(n:int) {			var lx1:int = root.limitSlider(n);			this.sliderBox.x = lx1;		}		//		private function mousedown(evt:MouseEvent):void {			pSliding = true;		}		//		private function mouseup(evt: MouseEvent):void {			pSliding = false;		}		///		private function enterframe(event:Event):void {			if (pSliding) {				var lx1:int = root.limitSlider(this.mouseX);				this.sliderBox.x = lx1;				var vAlpha:Number;				var n:Number;				if (lx1 < 50) {					vAlpha = lx1 / 50;				} else {					vAlpha = 1 - (lx1 - 50) / 50;				}				switch (pBtnNme) {					case ("rMoonSlider") :						parent.rMoonInput.text = lx1;						parent.swatches.rSwatch.alpha = vAlpha;						break;					case ("gMoonSlider") :						parent.gMoonInput.text = lx1;						parent.swatches.gSwatch.alpha = vAlpha;						break;					case ("bMoonSlider") :						parent.bMoonInput.text = lx1;						parent.swatches.bSwatch.alpha = vAlpha;						break;				}			}		}		//	}}